{
    "watch": [
        "src/**/*.ts",
        "tsconfig.json",
        "nodemon.json",
        "**/*schemas.ts"
    ],
    "env": {},
    "events": {
        "start": "clear"
    },
    "ignore": [
        "src/**/*.spec.ts",
        "src/prisma/*"
    ],
    "inspect": "0.0.0.0",
    "ext": "ts,json,env",
    "exec": "(tsc || exit 1) && tsc-alias && npm run start:dev"
}